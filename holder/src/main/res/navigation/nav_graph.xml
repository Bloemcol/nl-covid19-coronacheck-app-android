<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@+id/nav_status">

    <fragment
        android:id="@+id/nav_status"
        android:name="nl.rijksoverheid.ctr.holder.status.StatusFragment"
        android:label="nav_status">

        <action
            android:id="@+id/action_onboarding"
            app:destination="@id/nav_onboarding"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_myqr"
            app:destination="@id/nav_myqr"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_onboarding"
        android:name="nl.rijksoverheid.ctr.holder.onboarding.OnboardingFragment"
        android:label="@string/onboarding_title"
        tools:layout="@layout/fragment_onboarding_item">

        <action
            android:id="@+id/action_myqr"
            app:destination="@id/nav_myqr"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_myqr"
        android:name="nl.rijksoverheid.ctr.holder.myqr.MyQrFragment"
        android:label="@string/my_qr_title"
        tools:layout="@layout/fragment_my_qr" />

</navigation>
