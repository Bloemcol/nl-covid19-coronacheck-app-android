<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@+id/nav_status">

    <fragment
        android:id="@+id/nav_status"
        android:name="nl.rijksoverheid.ctr.holder.status.StatusFragment"
        android:label="nav_status">

        <action
            android:id="@+id/action_onboarding"
            app:destination="@id/nav_onboarding"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_privacy_policy"
            app:destination="@id/nav_privacy_policy"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_my_overview"
            app:destination="@id/nav_my_overview"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_onboarding"
        android:name="nl.rijksoverheid.ctr.holder.introduction.onboarding.OnboardingFragment"
        android:label="@string/onboarding_title"
        tools:layout="@layout/fragment_onboarding_item">

        <action
            android:id="@+id/action_privacy_policy"
            app:destination="@id/nav_privacy_policy" />

    </fragment>

    <fragment
        android:id="@+id/nav_privacy_policy"
        android:name="nl.rijksoverheid.ctr.holder.introduction.privacypolicy.PrivacyPolicyFragment"
        android:label=""
        tools:layout="@layout/fragment_privacy_policy">

        <action
            android:id="@+id/action_my_overview"
            app:destination="@id/nav_my_overview"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_my_overview"
        android:name="nl.rijksoverheid.ctr.holder.myoverview.MyOverviewFragment"
        android:label="@string/my_overview"
        tools:layout="@layout/fragment_my_overview">

        <action
            android:id="@+id/action_choose_provider"
            app:destination="@id/nav_choose_provider"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_choose_provider"
        android:name="nl.rijksoverheid.ctr.holder.myoverview.ChooseProviderFragment"
        android:label="@string/choose_provider_toolbar"
        tools:layout="@layout/fragment_choose_provider">

        <action
            android:id="@+id/action_commercial_test_type"
            app:destination="@id/nav_commercial_test_type"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_commercial_test_type"
        android:name="nl.rijksoverheid.ctr.holder.myoverview.CommercialTestTypeFragment"
        android:label=""
        tools:layout="@layout/fragment_commercial_test_type">

        <action
            android:id="@+id/action_commercial_test_code"
            app:destination="@id/nav_commercial_test_code"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_commercial_test_code"
        android:name="nl.rijksoverheid.ctr.holder.myoverview.CommercialTestCodeFragment"
        android:label=""
        tools:layout="@layout/fragment_commercial_test_code">

        <action
            android:id="@+id/action_your_negative_result"
            app:destination="@id/nav_your_negative_result"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_your_negative_result"
        android:name="nl.rijksoverheid.ctr.holder.myoverview.YourNegativeTestResultFragment"
        android:label=""
        tools:layout="@layout/fragment_your_negative_test_results" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="nl.rijksoverheid.ctr.holder.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
